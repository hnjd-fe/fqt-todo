{
    "name": "fqt-todo"
    , "short_name": "todolist"
    , "version": "1.5"
    , "description": "fqt-todo 时间四象限管理插件, 通过四个维度管理日常任务优先级. 数据默认存储在本地的 IndexedDB，如果需要同步功能登陆github数据会存储在远端服务器。"
    , "manifest_version": 2
    , "browser_action": {
        "default_popup": "popup.html"
        , "default_icon": "./assets/img/fqt-todo16.png"
        , "default_title": "fqt-todo"
    }
    , "background": {
        "page": "./chrome/background.html"
    }
    , "permissions": [ 
        "tabs"
        , "activeTab"
		, "identity"
        , "windows"
        , "storage"
        , "contextMenus"
        , "notifications"
        , "webRequest"
		, "https://accounts.google.com/o/oauth2/token"
		, "https://github.com/"
		, "http://btbtd.org/api/*"
    ]
	, "web_accessible_resources" : [
		"chrome/utils/oauth2/oauth2.html"
	]
	, "content_scripts": [
		{
			"matches": ["http://btbtd.org/api/fqttodo/token*"]
			, "js": ["chrome/utils/oauth2/oauth2_inject.js"]
			, "run_at": "document_start"
		}
	]
	, "options_page": "index.html"
    , "homepage_url": "https://github.com/hnjd-fe/fqt-todo"
    , "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
    , "icons": {
      "16": "./assets/img/fqt-todo16.png",
      "32": "./assets/img/fqt-todo32.png",
      "48": "./assets/img/fqt-todo48.png",
      "128": "./assets/img/fqt-todo128.png"
    }
}

